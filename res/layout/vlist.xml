<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="70.0dip"
    android:background="@drawable/item"
    android:drawingCacheQuality="high"
    android:minHeight="70.0dip"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/sItemIcon"
        android:layout_width="80dip"
        android:layout_height="60dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:padding="1dip"
        android:scaleType="fitXY"
        android:src="@drawable/ic_app_main" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sItemIcon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@+id/sItemIcon"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/listTitle"
        android:textSize="20.0sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"
        android:layout_toRightOf="@id/sItemIcon"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="#ff4400"
        android:textSize="12.0sp" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="50dip"
        android:layout_marginTop="20dip"
        android:layout_toLeftOf="@+id/view_btn"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="#0000FF"
        android:textSize="12.0sp" />

    <Button
        android:id="@+id/view_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="85dip"
        android:background="@drawable/btn_detail_selecter"
        android:text="@string/btn_info" />

    <Button
        android:id="@+id/view_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:background="@drawable/btn_detail_selecter"
        android:text="@string/btn_buy" />

</RelativeLayout>